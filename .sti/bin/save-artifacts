#!/bin/sh -e

echo "---> Saving build-artifacts"

artifacts=(
  bundle/ruby
  src/${APP_ROOT}/Gemfile.lock
  src/${APP_ROOT}/.checksum
)

pushd ${HOME} >/dev/null
artifacts=($(for a in ${artifacts[@]}; do [ -e "$a" ] && echo $a; done ))
tar zcf /tmp/artifacts/gems.tgz ${artifacts[@]}
popd >/dev/null
